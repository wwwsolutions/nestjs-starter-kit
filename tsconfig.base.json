{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "paths": {
      "@wwwsolutions/api/config/app": ["libs/api/config/app/src/index.ts"],
      "@wwwsolutions/api/config/codegen": [
        "libs/api/config/codegen/src/index.ts"
      ],
      "@wwwsolutions/api/config/docker": [
        "libs/api/config/docker/src/index.ts"
      ],
      "@wwwsolutions/api/config/features": [
        "libs/api/config/features/src/index.ts"
      ],
      "@wwwsolutions/api/core": ["libs/api/core/src/index.ts"],
      "@wwwsolutions/api/integration/graphql-prisma": [
        "libs/api/integration/graphql-prisma/src/index.ts"
      ],
      "@wwwsolutions/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
